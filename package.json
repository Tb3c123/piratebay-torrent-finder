{
    "name": "piratebay-torrent-finder",
    "version": "1.0.0",
    "description": "A Docker-based web application for searching torrents on The Pirate Bay and downloading with qBittorrent",
    "main": "backend/src/index.js",
    "scripts": {
        "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
        "dev:backend": "cd backend && npm run dev",
        "dev:frontend": "cd frontend && npm run dev",
        "build": "npm run build:backend && npm run build:frontend",
        "build:backend": "cd backend && npm run build",
        "build:frontend": "cd frontend && npm run build",
        "start": "npm run start:backend",
        "start:backend": "cd backend && npm start",
        "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
        "lint": "npm run lint:md && npm run lint:ts",
        "lint:md": "markdownlint '**/*.md' --ignore node_modules --ignore '**/node_modules/**' --fix",
        "lint:ts": "cd frontend && npm run type-check",
        "prepare": "husky install"
    },
    "keywords": [
        "torrent",
        "piratebay",
        "qbittorrent",
        "docker",
        "casaos"
    ],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "concurrently": "^8.2.2",
        "husky": "^8.0.3",
        "lint-staged": "^15.2.0",
        "markdownlint-cli": "^0.37.0"
    },
    "lint-staged": {
        "*.md": [
            "markdownlint --fix"
        ],
        "*.{ts,tsx}": [
            "cd frontend && npm run type-check"
        ]
    }
}
